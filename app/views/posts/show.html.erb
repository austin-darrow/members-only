<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<ul>
  <% if @post.user == current_user %>
    <li><%= link_to "Edit", edit_post_path(@post) %></li>
    <li><%= link_to "Destroy", post_path(@post), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %></li>
  <% end %>
  <li><%= link_to "Home", root_path %></li>
</ul>
